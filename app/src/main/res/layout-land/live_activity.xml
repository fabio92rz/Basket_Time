<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/rel_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Quarto"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <Button
                        android:id="@+id/minus_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="-"
                        android:onClick="subOneQuart"/>

                    <TextView
                        android:id="@+id/quarto_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="32dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="1Â°"
                        android:textColor="#616161"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/plus_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="+"
                        android:onClick="addQuarter"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/team_home_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:hint="Team Home"
                        android:background="#00000000"
                        android:textColorHint="#039be5"
                        android:inputType="textCapWords"
                        android:textColor="#039be5"
                        android:textSize="22sp"
                        android:layout_marginRight="90dp"
                        android:layout_marginLeft="10dp"/>

                    <EditText
                        android:id="@+id/team_visitors_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#F44336"
                        android:textSize="22sp"
                        android:hint="Team Visitor"
                        android:inputType="textCapWords"
                        android:background="#00000000"
                        android:textColorHint="#F44336" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/minus_button_1"
                        android:layout_width="52dp"
                        android:layout_height="60dp"
                        android:text="-"
                        android:onClick="subOne" />

                    <TextView
                        android:id="@+id/score_team_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textColor="#616161"
                        android:textSize="46sp" />

                    <Button
                        android:id="@+id/plus_button_1"
                        android:layout_width="52dp"
                        android:layout_height="60dp"
                        android:text="+"
                        android:onClick="addOnePoint" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp" />


                    <Button
                        android:id="@+id/minus_button_2"
                        android:layout_width="52dp"
                        android:layout_height="60dp"
                        android:text="-"
                        android:onClick="subOneVis" />

                    <TextView
                        android:id="@+id/score_team_visitor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textColor="#616161"
                        android:textSize="46sp" />

                    <Button
                        android:id="@+id/plus_button_2"
                        android:layout_width="52dp"
                        android:layout_height="60dp"
                        android:text="+"
                        android:onClick="addOnePointVis" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="42dp">

                    <Button
                        android:id="@+id/start_button"
                        android:text="Start!"
                        android:onClick="stream"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="80dp"
                        android:background="@drawable/custom_button"/>

                    <Button
                        android:id="@+id/reset_button"
                        android:text="Reset"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:onClick="resetScore"/>

                    <Button
                        android:id="@+id/stop_button"
                        android:text="Stop!"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:background="@drawable/custom_button2"/>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <ListView
        android:id="@+id/drawer_list"
        android:entries="@array/menÃ¹"
        android:background="#ffeeeeee"
        android:layout_width="200dp"
        android:layout_gravity="left|start"
        android:layout_height="match_parent">
    </ListView>

</android.support.v4.widget.DrawerLayout>