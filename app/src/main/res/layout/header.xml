<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/material2"
    android:orientation="vertical"
    android:id="@+id/header_rel_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:id="@+id/profile_image"
        android:src="@drawable/account_circle"
        android:layout_marginLeft="24dp"
        android:onClick="loadImagefromGallery"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:text="Nome e Cognome "
        android:id="@+id/username_header"
        android:layout_above="@+id/email_header"
        android:layout_alignLeft="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_header"
        android:text="Indirizzo Email"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/username_header"
        android:layout_alignStart="@+id/username_header" />

</RelativeLayout>