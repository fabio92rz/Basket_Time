<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_popup"
    android:layout_width="match_parent"
    card_view:cardElevation="0dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="10dp"
        android:elevation="0dp">

        <TextView
            android:id="@+id/quarterPopupCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="1Â°" />

        <LinearLayout
            android:id="@+id/matchQuarterCV"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/quarterPopupCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/scoreHomeQuarterCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="0"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="-"
                android:padding="7dp"
                />

            <TextView
                android:id="@+id/scoreVisitorQuarterCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="0"
                android:layout_marginRight="5dp" />
        </LinearLayout>

        <View
            android:id="@+id/quarterDivider"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"
            android:layout_below="@id/matchQuarterCV"
            android:layout_marginBottom="5dp"
            android:background="@android:color/black"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>